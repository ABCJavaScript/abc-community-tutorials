@import '../styles/variables.styl'

.header
  display flex
  flex-direction column
  justify-content space-between
  align-items center
  background-color orange
  color white

.site-title
  margin auto 
  font-weight 400
  font-size 3em

@import '../styles/*'

.nav {
  width: 100%;
  background-color: #ffffff;
}

.nav-items {
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
}
.nav-items__nav-item {
  display: inline;
  margin: 10px;
}
.nav-items__nav-item a {
  text-decoration: none;
  color: orange;
}
.nav-items__nav-item a:hover {
  text-decoration: underline;
}

